<div class="container">
<div class="row">
<div class="col-md-3">
<%= render '/books/c_user', user: @user %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><%= link_to "/users/#{book.user.id}" do %>
              <%= image_tag book.user.get_image, size: "100x100" %>
              <% end %></th>
          <th><%= link_to book.title, "/books/#{book.id}" %></th>
          <th><%= book.body %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>