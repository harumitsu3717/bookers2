<div class="container">
<div class="row">
<div class="col-md-6 mx-auto">
<h1>User info</h1>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %> error prohibited this obj from being saved: </h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model:@user do |f| %>

  <p>Name</p>
  <%= f.text_field :name, class: 'col-12' %>

  <p class="mt-3">Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <p class="mt-3">Introduction</p>
  <%= f.text_area :introduction, class: 'col-12' %><br>

  <%= f.submit 'Update User', class: "btn btn-secondary mt-2" %>

<% end %>
</div>
</div>
</div>