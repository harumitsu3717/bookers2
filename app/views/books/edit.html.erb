<div class="container">
<div class="row">
<div class="col-md-6 mx-auto">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> error prohibited this obj from being saved: </h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>

  <p>Title</p>
  <%= f.text_field :title, class: 'col-12' %>

  <p class="mt-3">Opinion</p>
  <%= f.text_area :body, class: 'col-12' %><br>

  <%= f.submit 'Update Book', class: "btn btn-success" %>

<% end %>
<div class="mt-3">
<%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
</div>
</div>
</div>
</div>