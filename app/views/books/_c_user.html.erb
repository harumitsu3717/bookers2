<div>
  <h2>User info</h2>
  <%= image_tag user.get_image, size: "100x100" %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </table>
  <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary col-12' do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>

  <div class="mt-3">
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <p>Title</p>
    <%= f.text_field :title, class: 'col-12' %>

    <p>Opinion</p>
    <%= f.text_area :body, class: 'col-12' %><br>

    <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
  </div>
</div>